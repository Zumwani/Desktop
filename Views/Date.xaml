<UserControl x:Class="Desktop.Views.Date"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:commands="clr-namespace:Desktop.Commands"
             xmlns:local="clr-namespace:Desktop.Views"
             DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <wpfui:Button Command="{commands:OpenCalendar}">
        <TextBlock FontSize="{Binding FontSize}">
            <Run Text="{local:Date StringFormat=d}"/><Run Text=","/>
            <Run Text="{local:Date StringFormat=ddd}"/>
        </TextBlock>
    </wpfui:Button>

</UserControl>
