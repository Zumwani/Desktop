        xmlns:local="clr-namespace:Launcher"
        xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Topmost="True"
        WindowStyle="None" Background="#202020">

    <WindowChrome.WindowChrome>
