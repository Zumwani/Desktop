<Window x:Class="Desktop.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desktop" WindowStartupLocation="CenterScreen"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}, Path=View}"
        Icon="{StaticResource Icon}"
        Width="1000" Height="562" ResizeMode="NoResize"
        Common.IsVisible="{Binding IsOpen}">

    <ContentPresenter Content="{Binding}"/>

</Window>
