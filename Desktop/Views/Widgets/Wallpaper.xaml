<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:Desktop.ViewModels"
                    xmlns:converters="clr-namespace:Desktop.Converters">

    <DataTemplate DataType="{x:Type viewModels:Wallpaper}">
        <Grid>
            <Border Background="#202020" Common.IsCollapsed="{Binding GeneralConfig.WallpaperUri,Converter={converters:HasValue}}"/>
            <Image Source="{Binding GeneralConfig.WallpaperUri, Mode=OneWay}" Stretch="{Binding Config.WallpaperStretch}"
                   RenderOptions.BitmapScalingMode="HighQuality" RenderOptions.EdgeMode="Aliased"/>
        </Grid>
    </DataTemplate>
    
</ResourceDictionary>