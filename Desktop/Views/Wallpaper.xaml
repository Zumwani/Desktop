<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:Desktop.ViewModels"
                    xmlns:converters="clr-namespace:Desktop.Converters">

    <DataTemplate DataType="{x:Type viewModels:Wallpaper}">
        <Grid>

            <Border Background="#202020" Common.IsCollapsed="{Binding GeneralConfig.WallpaperUri,Converter={converters:HasValue}}"/>

            <Image Source="{Binding GeneralConfig.WallpaperUri, Mode=OneWay}" Grid.ColumnSpan="3" Grid.RowSpan="2" RenderOptions.BitmapScalingMode="HighQuality" RenderOptions.EdgeMode="Aliased">
                <Image.Style>
                    <Style TargetType="Image">

                        <Setter Property="Stretch" Value="{Binding GeneralConfig.WallpaperStretch}"/>

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=IsIdle}" Value="True">
                                <Setter Property="Stretch" Value="{Binding IdleConfig.WallpaperStretch}"/>
                            </DataTrigger>
                        </Style.Triggers>

                    </Style>
                </Image.Style>
            </Image>

        </Grid>
    </DataTemplate>
    
</ResourceDictionary>