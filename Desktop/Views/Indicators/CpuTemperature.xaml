<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:Desktop.ViewModels"
                    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml">
    
    <DataTemplate DataType="{x:Type viewModels:CpuTemperature}">
        <wpfui:Button Icon="Temperature24" HorizontalAlignment="Right" ToolTip="CPU temperature"
                      Style="{StaticResource Styles.Button.IconRight}"
                      Common.ContextMenuOnLeftClick="True" Common.CenterContextMenu="True">

            <wpfui:Button.ContextMenu>
                <ContextMenu>
                    <wpfui:MenuItem SymbolIcon="WindowNew24" Header="Open task manager..." Command="{Binding OpenTaskManager}"/>
                    <Separator/>
                    <wpfui:MenuItem SymbolIcon="Settings48" Header="Configure..." Command="{Binding OpenTrackerConfigCommand}"/>
                </ContextMenu>
            </wpfui:Button.ContextMenu>

            <TextBlock Text="{Binding Value, Mode=OneWay, StringFormat='{}{0}℃', TargetNullValue='--', FallbackValue='--'}"/>
            
        </wpfui:Button>
    </DataTemplate>
    
</ResourceDictionary>