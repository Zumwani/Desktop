<UserControl x:Class="Desktop.Views.Time"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Desktop.Views"
             xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:commands="clr-namespace:Desktop.Commands"
             DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <wpfui:Button Command="{commands:OpenCalendar}">
        <TextBlock Text="{local:Date StringFormat=t}">
            <TextBlock.Style>
                <Style TargetType="TextBlock">

                    <Setter Property="FontSize" Value="92"/>

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=IsIdle, Mode=OneWay}" Value="True">
                            <Setter Property="FontSize" Value="172"/>
                        </DataTrigger>
                    </Style.Triggers>

                </Style>
            </TextBlock.Style>
        </TextBlock>
    </wpfui:Button>
    
</UserControl>
