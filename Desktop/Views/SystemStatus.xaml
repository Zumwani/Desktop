<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:Desktop.ViewModels"
                    xmlns:commands="clr-namespace:Desktop.Commands">

    <DataTemplate DataType="{x:Type viewModels:SystemStatus}">
        
        <wpfui:Card HorizontalAlignment="Right" VerticalAlignment="Bottom" HorizontalContentAlignment="Right">

            <wpfui:Card.ContextMenu>
                <ContextMenu>
                    <wpfui:MenuItem SymbolIcon="Settings48" Header="Configure..." Command="{commands:ConfigureSystemInfo}"/>
                </ContextMenu>
            </wpfui:Card.ContextMenu>
            
            <UniformGrid Columns="1">
                <ContentPresenter Content="{Binding BluetoothBattery}"/>
                <ContentPresenter Content="{Binding CpuUsage}"/>
                <ContentPresenter Content="{Binding CpuTemperature}"/>
                <ContentPresenter Content="{Binding Memory}"/>
            </UniformGrid>
            
        </wpfui:Card>

    </DataTemplate>
    
</ResourceDictionary>
