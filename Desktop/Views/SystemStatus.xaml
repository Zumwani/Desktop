<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:Desktop.ViewModels">

    <DataTemplate DataType="{x:Type viewModels:SystemStatus}">
        
        <DataTemplate.Resources>
            
            <Style TargetType="wpfui:Button" BasedOn="{StaticResource Styles.Button}">
                <Setter Property="Tag" Value="IconRight"/>
                <Setter Property="FontSize" Value="{Binding FontSize}"/>
            </Style>
        
        </DataTemplate.Resources>
    
        <UniformGrid Columns="1">
            <ContentPresenter Content="{Binding BluetoothBattery}"/>
            <ContentPresenter Content="{Binding CpuUsage}"/>
            <ContentPresenter Content="{Binding CpuTemperature}"/>
            <ContentPresenter Content="{Binding Memory}"/>
        </UniformGrid>

    </DataTemplate>
    
</ResourceDictionary>
