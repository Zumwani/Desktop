<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:Desktop.ViewModels.SettingPages"
                    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml">

    <DataTemplate DataType="{x:Type viewModels:SystemInfo}">
        <StackPanel>

            <wpfui:Button Content="Restart server" Command="{Binding RestartServerCommand}" Margin="0,0,0,8">
                <wpfui:Button.ToolTip>
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="Restart system info server."/>
                        <LineBreak/>
                        <LineBreak/>
                        <Run Text="Local server is required, since some hardware sensors require admin."/>
                    </TextBlock>
                </wpfui:Button.ToolTip>   
            </wpfui:Button>
            
            <wpfui:Card>
                <StackPanel>
                    <TextBlock Text="Update interval"/>
                    <Label Content="TODO: Add timepicker"/>
                </StackPanel>
            </wpfui:Card>
            
        </StackPanel>
    </DataTemplate>
    
</ResourceDictionary>