<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:Desktop.ViewModels.SettingPages"
                    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml">

    <DataTemplate DataType="{x:Type viewModels:SystemInfo}">
        <StackPanel>

            <wpfui:Card>
                <StackPanel>
                    <TextBlock Text="Update interval"/>
                    <TextBlock Text="Local server is required due admin access required by some hardware sensors"/>
                    <wpfui:Button Content="Restart server"/>
                </StackPanel>
            </wpfui:Card>
            
        </StackPanel>
    </DataTemplate>
    
</ResourceDictionary>