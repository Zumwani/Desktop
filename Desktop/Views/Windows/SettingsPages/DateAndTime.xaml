<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:Desktop.ViewModels.SettingPages"
                    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml">

    <DataTemplate DataType="{x:Type viewModels:DateAndTime}">
        <StackPanel>

            <wpfui:Card>
                <StackPanel>

                    <TextBlock Text="Use windows format for date"/>
                    <TextBlock Text="Use windows format for time"/>

                    <TextBlock Text="Date format"/>
                    <TextBlock Text="Time format"/>

                    <wpfui:Button Content="Open windows date and time settings"/>

                </StackPanel>
            </wpfui:Card>
            
        </StackPanel>
    </DataTemplate>
    
</ResourceDictionary>